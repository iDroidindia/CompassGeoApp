<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CompassActivity"
    android:id="@+id/rl">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/toolbar"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CompassActivity">

    <ImageView
        android:id="@+id/main_image_dial"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/compass_dial"
        android:src="@drawable/dial" />

    <ImageView
        android:id="@+id/main_image_hands"
        android:layout_width="20dp"
        android:layout_height="240dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/compass_hands"
        android:scaleType="fitXY"
        android:src="@drawable/hands" />

        <!-- <ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
         android:src="@drawable/user_location"
         android:layout_width="@dimen/iv_usr_loc_height_width"
         android:layout_height="@dimen/iv_usr_loc_height_width"
         android:layout_marginTop="200dp"
         android:layout_centerVertical="true"
         android:layout_centerHorizontal="true"
         android:id="@+id/iv_usr_location" />


        <!-- <ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/iv_height_width"
            android:layout_height="@dimen/iv_height_width"
            android:layout_alignParentTop="true"
            android:layout_marginTop="152dp"
            android:layout_marginRight="15dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            android:id="@+id/imageView1"
            android:layout_toStartOf="@+id/imageView2"
            android:layout_toLeftOf="@+id/imageView2" />

        <!-- <ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/iv_height_width"
            android:layout_height="@dimen/iv_height_width"
            app:civ_border_width="2dp"
            android:layout_marginTop="480dp"
            android:layout_marginRight="02dp"
            app:civ_border_color="@color/colorAccent"
            android:layout_centerVertical="true"
            android:id="@+id/imageView2"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_alignRight="@+id/main_image_dial"
            android:layout_alignEnd="@+id/main_image_dial" />

        <!-- <ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/iv_height_width"
            android:layout_height="@dimen/iv_height_width"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="140dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            android:id="@+id/imageView3" />

        <!-- <ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/iv_height_width"
            android:layout_height="@dimen/iv_height_width"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            android:id="@+id/imageView4"
            android:layout_alignLeft="@+id/main_image_dial"
            android:layout_alignStart="@+id/main_image_dial" />

    <!-- <ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@mipmap/ic_launcher"
            android:layout_width="@dimen/iv_height_width"
            android:layout_height="@dimen/iv_height_width"
            android:layout_alignParentTop="true"
            android:layout_marginTop="155dp"
            android:layout_marginLeft="15dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            android:id="@+id/imageView5"
            android:layout_toRightOf="@+id/imageView4"
            android:layout_toEndOf="@+id/imageView4" />

        </RelativeLayout>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:layout_alignParentTop="true"
            tools:context=".CompassActivity">

         <com.nhaarman.supertooltips.ToolTipRelativeLayout
            android:id="@+id/tooltip_iv_usr_location"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_marginLeft="05dp"
             android:layout_marginBottom="150dp"/>

            <com.nhaarman.supertooltips.ToolTipRelativeLayout
                android:id="@+id/tooltip_iv_usr_loc_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="05dp"
                android:layout_marginBottom="150dp"/>

            <com.nhaarman.supertooltips.ToolTipRelativeLayout
                android:id="@+id/tooltip_iv_usr_loc_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="05dp"
                android:layout_marginBottom="150dp"/>

        <com.nhaarman.supertooltips.ToolTipRelativeLayout
            android:id="@+id/tooltip_iv_usr_loc_4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="150dp"/>

        <com.nhaarman.supertooltips.ToolTipRelativeLayout
            android:id="@+id/tooltip_iv_usr_loc_5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="05dp"
            android:layout_marginBottom="180dp"/>


            <com.nhaarman.supertooltips.ToolTipRelativeLayout
                android:id="@+id/tooltip_iv_usr_loc_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="180dp"/>


            <!-- <com.nhaarman.supertooltips.ToolTipRelativeLayout
                android:id="@+id/tooltip_iv_usr_loc_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="false"
                android:layout_alignParentEnd="false" /> -->

        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>
